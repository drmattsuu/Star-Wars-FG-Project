	<windowclass name="attachmentmods">
		<frame>charsheet</frame>
		<placement>
			<size>
				<width>300</width>
				<height>334</height>
			</size>
		</placement>
		<minimize>minimized_reference</minimize>
		<playercontrol />
		<sharable />
		<tooltip>
			<field>name</field>
		</tooltip>
		<sheetdata>
<!-- NAME -->
			<sheetframe name="mods_name">
				<bounds>14,15,264,49</bounds>
			</sheetframe>
			
			<sheetframetitle name="mods_name_title">
				<anchored>
					<to>mods_name</to>
				</anchored>
				<static>Attachment</static>
			</sheetframetitle>			
			
			<windowshortcut name="mods_name_shortcut">
				<anchored>
					<to>mods_name</to>
					<position>insidetopleft</position>					
					<offset>17,18</offset>
					<size>
						<height>20</height>
						<width>20</width>
					</size>
				</anchored>			
				<class>attachment</class>
			</windowshortcut>
			<basestringfield name="mods_name_name" source="name">
				<anchored>			
					<to>mods_name</to>
					<position>insidetopleft</position>					
					<offset>38,19</offset>
					<size>
						<height>20</height>
						<width>200</width>
					</size>
				</anchored>
				<empty>&#171; New Attachment &#187;</empty>
				<tabtarget>
					<next>mods_mods_description</next>
					<prev>mods_traits_traits</prev>
				</tabtarget>				
			</basestringfield>		

<!-- MODS LIST -->
			<sheetframe name="mods_mods">
				<bounds>14,61,264,158</bounds>
			</sheetframe>
			<sheetframetitle name="mods_mods_title">
				<anchored>
					<to>mods_mods</to>
				</anchored>
				<static>Modification Options</static>
			</sheetframetitle>
			<sheetframetitle name="mods_mods_type">
				<anchored>
					<to>mods_mods</to>
					<position>insidetopleft</position>
					<offset>17,20</offset>
					<size>
						<width>50</width>
					</size>					
				</anchored>
				<center />
				<static>Mod Type</static>
				<tooltip textres="inventory_inventory_isequipped" />
			</sheetframetitle>			
			<sheetframetitle name="mods_mods_installed">
				<anchored>
					<to>mods_mods</to>
					<position>insidetopright</position>
					<offset>13,20</offset>
					<size>
						<width>55</width>
					</size>					
				</anchored>
				<center />
				<static>Installed?</static>
			</sheetframetitle>			
			
