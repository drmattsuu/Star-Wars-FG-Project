			<basewindowlist name="mods_mods_list">
				<skipempty />
				<anchored>
					<left>
						<parent>mods_mods</parent>
						<anchor>left</anchor>
						<offset>13</offset>					
					</left>
					<right>
						<parent>mods_mods</parent>
						<anchor>right</anchor>
						<offset>-13</offset>					
					</right>
					<top>
						<parent>mods_mods</parent>
						<anchor>top</anchor>
						<offset>30</offset>
					</top>
					<bottom>
						<parent>mods_mods</parent>
						<anchor>bottom</anchor>
						<offset>-20</offset>
					</bottom>
				</anchored>
				<datasource>.mods</datasource>
				<class>attachmentmodsmall</class>
				<allowcreate />
				<allowdelete /> 
				<acceptdrop>
					<class>attachmentmod</class>
					<field>*</field>
				</acceptdrop>
			</basewindowlist>
			<scrollbar>
				<anchored>
					<to>mods_mods_list</to>
					<offset>-3,0</offset>
				</anchored>
				<target>mods_mods_list</target>
			</scrollbar>			
			
<!-- TRAITS -->
			<sheetframe name="mods_traits">
				<bounds>14,216,264,106</bounds>
			</sheetframe>
			
			<!--** Value ** -->
			<sheetlabel>
				<anchored>
					<to>mods_traits</to>
					<offset>17,18</offset>
					<size>
						<width>209</width>
					</size>
				</anchored>
				<static>Price</static>
			</sheetlabel>			
			<sheetstringfield name="mods_inventory_value" source="value">
				<anchored>
					<top>
						<parent>mods_traits</parent>
						<anchor>top</anchor>
						<offset>15</offset>
					</top>
					<right>
						<parent>mods_traits</parent>
						<anchor>right</anchor>
						<offset>-16</offset>
					</right>
				</anchored>
				<empty>&#171; Price &#187;</empty>
				<tabtarget>
					<next>mods_inventory_hardpoints</next>
					<prev>mods_name_name</prev>
				</tabtarget>
				<center />
			</sheetstringfield>			
			
			<!--** Hard Points **-->
			<sheetlabel>
				<anchored>
					<to>mods_traits</to>
					<offset>17,38</offset>
					<size>
						<width>209</width>
					</size>
				</anchored>
				<static>Hard Points Required</static>
			</sheetlabel>			
			<sheetnumberfield name="mods_inventory_hardpoints" source="hardpoints">
				<anchored>
					<to>mods_traits</to>
					<offset>201,38</offset>
					<size>
						<width>50</width>
					</size>
				</anchored>
				<empty>&#171; Hard Points &#187;</empty>
				<tabtarget>
					<next>mods_inventory_rarity</next>
					<prev>mods_inventory_value</prev>
				</tabtarget>
			</sheetnumberfield>	

			<!--** Rarity **-->
			<sheetlabel>
				<anchored>
					<to>mods_traits</to>
					<offset>17,58</offset>
					<size>
						<width>209</width>
					</size>
				</anchored>
				<static>Rarity</static>
			</sheetlabel>			
			<sheetstringfield name="mods_inventory_rarity" source="rarity">
				<anchored>
					<top>
						<parent>mods_traits</parent>
						<anchor>top</anchor>
						<offset>55</offset>
					</top>
					<right>
						<parent>mods_traits</parent>
						<anchor>right</anchor>
						<offset>-16</offset>
					</right>
				</anchored>
				<empty>&#171; Rarity &#187;</empty>
				<tabtarget>
					<next>mods_inventory_encumbrance</next>
					<prev>mods_inventory_craftmanship</prev>
				</tabtarget>
				<center />
			</sheetstringfield>
			
			<!--** encumbrance **-->
			<sheetlabel>
				<anchored>
					<to>mods_traits</to>
					<offset>17,78</offset>
					<size>
						<width>209</width>
					</size>
				</anchored>
				<static>Encumbrance</static>
			</sheetlabel>
			<sheetnumberfield name="mods_inventory_encumbrance" source="encumbrance">
				<anchored>
					<to>mods_traits</to>
					<offset>201,78</offset>
					<size>
						<width>50</width>
					</size>
				</anchored>
				<tabtarget>
					<next>mods_name_name</next>
					<prev>mods_inventory_rarity</prev>
				</tabtarget>
			</sheetnumberfield>	
			
			<closebutton />
		</sheetdata>
	</windowclass>	
	
