<?xml version="1.0" encoding="iso-8859-1"?>
<root>

	<windowclass name="itemrunes">
		<placement>
			<size>
				<width>300</width>
				<height>334</height>
			</size>
		</placement>
		<nodelete />
		<sheetdata>
		
<!-- NAME -->
			<sheetframe name="main_name">
				<bounds>12,20,264,45</bounds>
			</sheetframe>
			
			<sheetframetitle name="main_name_title">
				<anchored>
					<to>main_name</to>
				</anchored>
				<static>Item</static>
			</sheetframetitle>			
			
			<windowshortcut name="main_name_shortcut">
				<anchored>
					<to>main_name</to>
					<position>insidetopleft</position>					
					<offset>11,18</offset>
					<size>
						<height>20</height>
						<width>20</width>
					</size>
				</anchored>			
				<class>item</class>
			</windowshortcut>
			<basestringfield name="main_name_name" source="name">
				<anchored>			
					<to>main_name</to>
					<position>insidetopleft</position>					
					<offset>32,19</offset>
					<size>
						<height>20</height>
						<width>200</width>
					</size>
				</anchored>
				<empty>&#171; New Item &#187;</empty>
				<tabtarget>
					<next>main_inventory_value</next>
					<prev>main_inventory_encumbrance</prev>
				</tabtarget>				
			</basestringfield>
			
<!-- RUNES -->
			<sheetframe name="runes_runes">
				<bounds>12,60,264,260</bounds>
			</sheetframe>
			<sheetframetitle name="runes_runes_title">
				<anchored>
					<to>runes_runes</to>
				</anchored>
				<static>Customization and Modifications</static>
			</sheetframetitle>

			<!-- Hard Points -->
			<sheetlabel>
				<anchored>
					<to>runes_runes_title</to>
					<offset>13,13</offset>
					<size>
						<width>209</width>
					</size>
				</anchored>
				<static>Hard Points</static>
			</sheetlabel>			
			<sheetnumberfield name="main_inventory_hardpoints" source="hardpoints">
				<anchored>
					<to>runes_runes_title</to>
					<offset>201,13</offset>
					<size>
						<width>50</width>
					</size>
				</anchored>
				<empty>&#171; Hard Points &#187;</empty>
<!--				<tabtarget>
					<next>main_inventory_rarity</next>
					<prev>main_inventory_value</prev>
				</tabtarget>-->
			</sheetnumberfield>				

			<!-- RUNES -->			
			<sheetlist name="runes_runes_runes">
				<anchored>
					<left>
						<parent>runes_runes</parent>
						<anchor>left</anchor>
						<offset>12</offset>					
					</left>
					<right>
						<parent>runes_runes</parent>
						<anchor>right</anchor>
						<offset>-13</offset>					
					</right>
					<top>
						<parent>runes_runes</parent>
						<anchor>top</anchor>
						<offset>38</offset>
					</top>
					<bottom>
						<parent>runes_runes</parent>
						<anchor>bottom</anchor>
						<offset>-13</offset>
					</bottom>
				</anchored>
				<datasource>.mods</datasource>
				<class>runesmall</class>
				<allowcreate />
				<acceptdrop>
					<class>rune</class>
					<field>*</field>
				</acceptdrop>
			</sheetlist>
			<scrollbar>
				<anchored>
					<to>runes_runes_runes</to>
					<offset>-3,-2</offset>
				</anchored>
				<target>runes_runes_runes</target>
			</scrollbar>			
						
		</sheetdata>
	</windowclass>
			
</root>