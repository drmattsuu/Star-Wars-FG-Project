<!-- WINDOW -->
	<windowclass name="npccombat">
		<placement>
			<size>
				<width>509</width>
				<height>307</height>
			</size>
		</placement>
		<nodelete />
		<sheetdata>
		
<!-- ACTIONS -->
			<sheetframe name="combat_actions">
				<bounds>12,20,236,273</bounds>
				<frame>
					<name>sheetgroup</name>
				</frame>		
			</sheetframe>
			
			<!-- Actions -->
			<basewindowlist name="combat_actions_actions">
				<class>empty</class>
				<skipempty />
				<anchored>
					<left>
						<parent>combat_actions</parent>
						<anchor>left</anchor>
						<offset>7</offset>					
					</left>
					<right>
						<parent>combat_actions</parent>
						<anchor>right</anchor>
						<offset>-7</offset>					
					</right>
					<top>
						<parent>combat_actions</parent>
						<anchor>top</anchor>
						<offset>7</offset>
					</top>
					<bottom>
						<parent>combat_actions</parent>
						<anchor>bottom</anchor>
						<offset>-7</offset>
					</bottom>
				</anchored>
				<script>
					function onInit()
						createWindowWithClass("npc_combat_blessings", window.getDatabaseNode());
						createWindowWithClass("npc_combat_melee", window.getDatabaseNode());
						createWindowWithClass("npc_combat_ranged", window.getDatabaseNode());					
						createWindowWithClass("npc_combat_social", window.getDatabaseNode());
						createWindowWithClass("npc_combat_spells", window.getDatabaseNode());					
						createWindowWithClass("npc_combat_support", window.getDatabaseNode());
					end
				</script>
			</basewindowlist>
			<scrollbar>
				<anchored>
					<to>combat_actions_actions</to>
					<offset>-9,-8</offset>
				</anchored>
				<target>combat_actions_actions</target>
			</scrollbar>			
			
<!-- CONDITIONS -->
			<sheetframe name="combat_conditions">
				<bounds>248,20,236,273</bounds>
				<frame>
					<name>sheetgroup</name>
				</frame>		
			</sheetframe>
			
			<!-- Conditions -->
			<basewindowlist name="combat_conditions_conditions">
				<class>empty</class>
				<skipempty />
				<anchored>
					<left>
						<parent>combat_conditions</parent>
						<anchor>left</anchor>
						<offset>7</offset>					
					</left>
					<right>
						<parent>combat_conditions</parent>
						<anchor>right</anchor>
						<offset>-7</offset>					
					</right>
					<top>
						<parent>combat_conditions</parent>
						<anchor>top</anchor>
						<offset>7</offset>
					</top>
					<bottom>
						<parent>combat_conditions</parent>
						<anchor>bottom</anchor>
						<offset>-7</offset>
					</bottom>
				</anchored>
				<script>
					function onInit()
						createWindowWithClass("npc_combat_conditions", window.getDatabaseNode());
						createWindowWithClass("npc_combat_criticals", window.getDatabaseNode());
						createWindowWithClass("npc_combat_diseases", window.getDatabaseNode());
						createWindowWithClass("npc_combat_insanities", window.getDatabaseNode());					
						createWindowWithClass("npc_combat_miscasts", window.getDatabaseNode());
						createWindowWithClass("npc_combat_mutations", window.getDatabaseNode());					
					end
				</script>
			</basewindowlist>
			<scrollbar>
				<anchored>
					<to>combat_conditions_conditions</to>
					<offset>-9,-8</offset>
				</anchored>
				<target>combat_conditions_conditions</target>
			</scrollbar>		
		
		</sheetdata>
	</windowclass>
