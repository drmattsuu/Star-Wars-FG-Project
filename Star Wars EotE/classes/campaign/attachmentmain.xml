<?xml version="1.0" encoding="iso-8859-1"?>
<root>
	<windowclass name="attachmentmain">
		<frame>charsheet</frame>
		<placement>
			<size>
				<width>300</width>
				<height>334</height>
			</size>
		</placement>
		<minimize>minimized_reference</minimize>
		<playercontrol />
		<sharable />
		<tooltip>
			<field>name</field>
		</tooltip>
		<sheetdata>
<!-- NAME -->
			<sheetframe name="main_name">
				<bounds>14,15,264,49</bounds>
			</sheetframe>
			
			<sheetframetitle name="main_name_title">
				<anchored>
					<to>main_name</to>
				</anchored>
				<static>Attachment</static>
			</sheetframetitle>			
			
			<windowshortcut name="main_name_shortcut">
				<anchored>
					<to>main_name</to>
					<position>insidetopleft</position>					
					<offset>17,18</offset>
					<size>
						<height>20</height>
						<width>20</width>
					</size>
				</anchored>			
				<class>attachment</class>
			</windowshortcut>
			<basestringfield name="main_name_name" source="name">
				<anchored>			
					<to>main_name</to>
					<position>insidetopleft</position>					
					<offset>38,19</offset>
					<size>
						<height>20</height>
						<width>200</width>
					</size>
				</anchored>
				<empty>&#171; New Attachment &#187;</empty>
				<tabtarget>
					<next>main_description_description</next>
					<prev>main_traits_traits</prev>
				</tabtarget>				
			</basestringfield>		

<!-- DESCRIPTION -->
			<sheetframe name="main_description">
				<bounds>14,61,264,158</bounds>
			</sheetframe>
			<sheetframetitle name="main_description_title">
				<anchored>
					<to>main_description</to>
				</anchored>
				<static>Attachment Description</static>
			</sheetframetitle>
			
			<sheetformattedtextfield name="main_description_description" source="description">
				<anchored>
					<left>
						<parent>main_description</parent>
						<anchor>left</anchor>
						<offset>13</offset>					
					</left>
					<right>
						<parent>main_description</parent>
						<anchor>right</anchor>
						<offset>-13</offset>					
					</right>
					<top>
						<parent>main_description</parent>
						<anchor>top</anchor>
						<offset>20</offset>
					</top>
					<bottom>
						<parent>main_description</parent>
						<anchor>bottom</anchor>
						<offset>-20</offset>
					</bottom>
				</anchored>
			</sheetformattedtextfield>
			<scrollbar>
				<anchored>
					<to>main_description_description</to>
					<offset>-3,-2</offset>
				</anchored>
				<target>main_description_description</target>
			</scrollbar>			
			
<!-- TRAITS -->
			<sheetframe name="main_traits">
				<!--<bounds>12,280,264,40</bounds>-->
				<bounds>14,216,264,106</bounds>
			</sheetframe>
			
			<!-- Value -->
			<sheetlabel>
				<anchored>
					<to>main_traits</to>
					<offset>17,18</offset>
					<size>
						<width>209</width>
					</size>
				</anchored>
				<static>Price</static>
			</sheetlabel>			
			<sheetstringfield name="main_inventory_value" source="value">
				<anchored>
					<top>
						<parent>main_traits</parent>
						<anchor>top</anchor>
						<offset>15</offset>
					</top>
					<right>
						<parent>main_traits</parent>
						<anchor>right</anchor>
						<offset>-16</offset>
					</right>
				</anchored>
				<empty>&#171; Price &#187;</empty>
				<tabtarget>
					<next>main_inventory_hardpoints</next>
					<prev>main_name_name</prev>
				</tabtarget>
				<center />
			</sheetstringfield>			
			
			<!-- Hard Points -->
			<sheetlabel>
				<anchored>
					<to>main_traits</to>
					<offset>17,38</offset>
					<size>
						<width>209</width>
					</size>
				</anchored>
				<static>Hard Points Required</static>
			</sheetlabel>			
			<sheetnumberfield name="main_inventory_hardpoints" source="hardpoints">
				<anchored>
					<to>main_traits</to>
					<offset>201,38</offset>
					<size>
						<width>50</width>
					</size>
				</anchored>
				<empty>&#171; Hard Points &#187;</empty>
				<tabtarget>
					<next>main_inventory_rarity</next>
					<prev>main_inventory_value</prev>
				</tabtarget>
			</sheetnumberfield>	

			<!-- Rarity -->
			<sheetlabel>
				<anchored>
					<to>main_traits</to>
					<offset>17,58</offset>
					<size>
						<width>209</width>
					</size>
				</anchored>
				<static>Rarity</static>
			</sheetlabel>			
			<sheetstringfield name="main_inventory_rarity" source="rarity">
				<anchored>
					<top>
						<parent>main_traits</parent>
						<anchor>top</anchor>
						<offset>55</offset>
					</top>
					<right>
						<parent>main_traits</parent>
						<anchor>right</anchor>
						<offset>-16</offset>
					</right>
				</anchored>
				<empty>&#171; Rarity &#187;</empty>
				<tabtarget>
					<next>main_inventory_encumbrance</next>
					<prev>main_inventory_craftmanship</prev>
				</tabtarget>
				<center />
			</sheetstringfield>
			
			<!-- encumbrance -->
			<sheetlabel>
				<anchored>
					<to>main_traits</to>
					<offset>17,78</offset>
					<size>
						<width>209</width>
					</size>
				</anchored>
				<static>Encumbrance</static>
			</sheetlabel>
			<sheetnumberfield name="main_inventory_encumbrance" source="encumbrance">
				<anchored>
					<to>main_traits</to>
					<offset>201,78</offset>
					<size>
						<width>50</width>
					</size>
				</anchored>
				<tabtarget>
					<next>main_name_name</next>
					<prev>main_inventory_rarity</prev>
				</tabtarget>
			</sheetnumberfield>	
			
			<closebutton />
		</sheetdata>
	</windowclass>
	
</root>