				<script file="classes/campaign/npcgrouptalentslot.lua" />
			</basestringfield>				
			<rechargenumberfield name="main_slots_2_recharge" source="slots.2.currentrecharge">
				<rechargevalue>4</rechargevalue>
				<anchored>
					<to>main_slots</to>
					<offset>434,13</offset>
				</anchored>
			</rechargenumberfield>				
			
		</sheetdata>
	</windowclass>
	
