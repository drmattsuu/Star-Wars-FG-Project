<!-- BLESSINGS -->
	<windowclass name="npcgroup_combat_blessings">
		<sizelimits>
			<minimum>
				<height>20</height>
			</minimum>
		</sizelimits>		
		<sheetdata>
			<genericcontrol>
				<frame><name>rowshade</name></frame>							
				<anchored>
					<position>insidetop</position>
					<size>
						<height>20</height>
					</size>
				</anchored>
				<script>
					function onInit()
						registerMenuItem("Create Item", "insert", 5);
					end
					
					function onMenuSelection(selection)
						window.list.createWindow();
					end
				</script>
			</genericcontrol>		
			<basestringcontrol>
				<static>Blessings</static>			
				<bounds>5,4,-1,16</bounds>
				<disabled />
			</basestringcontrol>
			<socketedlist name="list">
				<bounds>5,20,-2,-1</bounds>
				<class>blessingsmall</class>
				<datasource>.blessings</datasource>
				<allowdelete />
			</socketedlist>	
		</sheetdata>
	</windowclass>

