<?xml version="1.0" encoding="iso-8859-1"?>
<root>

	<windowclass name="chat">
		<frame>chatbox</frame>	
		<sheetdata>
			<chatwindow name="chat">
				<bounds>16,15,-20,-54</bounds>
				<droptypes>
					<type>dice</type>
					<type>number</type>
					<type>string</type>
				</droptypes>
				<stateframe>
					<drophilight>
						<name>chatboxhilight</name>
						<offset>5,5,5,5</offset>
					</drophilight>
				</stateframe>
				<linkcolor>0000FF</linkcolor>
				<linkicon normal="button_link" pressed="button_link_down" />				
				<modeframe>
					<mode>chat</mode>
					<name>chatframe</name>
					<offset>15,5,5,5</offset>
				</modeframe>				
				<script file="classes/desktop/chat.lua" />			
			</chatwindow>
			<genericcontrol>
				<anchored>
					<position>insidetopright</position>
					<offset>16,15</offset>
					<size>
						<width>60</width>
						<height>61</height>
					</size>
				</anchored>
				<icon>indicator_chatwait</icon>
				<invisible />
				<script>
					function onUserStateChange(username, statename, state)
						if username == "" then
							if statename == "typing" then
								setVisible(true);
							elseif statename == "active" or statename == "idle" then
								setVisible(false);
							end
						end
					end
				
					function onInit()
						User.onUserStateChange = onUserStateChange;
					end
				</script>
			</genericcontrol>
			<chatentry name="entry">
				<anchored>
					<left>
						<anchor>left</anchor>
						<offset>16</offset>
					</left>
					<top>
						<anchor>bottom</anchor>
						<offset>-35</offset>
					</top>
					<right>
						<anchor>right</anchor>
						<offset>-64</offset>
					</right>
					<size>
						<height>20</height>
					</size>
				</anchored>			
				<font>chatfont</font>
				<chatwindow>chat</chatwindow>			
				<script file="classes/desktop/chatentry.lua" />		
			</chatentry>
			<genericcontrol name="mode">
				<anchored>
					<right>
						<anchor>right</anchor>
						<offset>-17</offset>
					</right>
					<top>
						<anchor>bottom</anchor>
						<offset>-40</offset>
					</top>
					<size>
						<width>43</width>
						<height>24</height>
					</size>
				</anchored>
				<icon>chat_speak</icon>
				<script file="classes/desktop/chatmode.lua" />
			</genericcontrol>			
		</sheetdata>
	</windowclass>

</root>