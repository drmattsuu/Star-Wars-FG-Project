		<sheetdata>
			<basestringcontrol name="label">
				<font>chatfont</font>
				<bounds>12,6,-120,-3</bounds>
				<empty>&#171; Unnamed Option &#187;</empty>
				<readonly />
			</basestringcontrol>
			<basestringcontrol name="value">
				<font>chatfont</font>
				<bounds>-110,6,-10,-3</bounds>
