<?xml version="1.0" encoding="iso-8859-1"?>
<root version="2.0">

	<windowclass name="referencesmall">
		<sizelimits>
			<maximum>
				<height>20</height>
			</maximum>
		</sizelimits>
		<sheetdata>
			<windowbutton name="open">
				<bounds>0,0,20,20</bounds>
				<class>reference</class>
			</windowbutton>
			<basestringfield name="name">
				<bounds>21,3,-1,17</bounds>
				<empty>&#171; New Reference &#187;</empty>
				<disabled />
			</basestringfield>		
		</sheetdata>
	</windowclass>

	<windowclass name="reference">
		<frame>referencebox</frame>
		<placement>
			<size>
				<width>300</width>
				<height>300</height>
			</size>
		</placement>
		<sizelimits>
			<minimum>
				<width>300</width>
				<height>300</height>
			</minimum>
			<dynamic>
				<resize>both</resize>
			</dynamic>
		</sizelimits>
		<minimize>minimized_reference</minimize>
		<playercontrol />
		<sharable />		
		<tooltip>
			<field>name</field>
		</tooltip>
		<sheetdata>
			<windowshortcut>
				<bounds>18,16,20,20</bounds>
				<class>reference</class>
			</windowshortcut>
			<basestringfield name="name">
				<bounds>39,19,-25,20</bounds>
				<empty>&#171; New Reference &#187;</empty>
			</basestringfield>

			<baseformattedtextfield name="description">
				<bounds>20,38,-24,-20</bounds>
				<font>
					<normal>chatfont</normal>
					<bold>narratorfont</bold>
					<italic>chatitalicfont</italic>
					<bolditalic>chatbolditalicfont</bolditalic>
					<title>sheetlabel</title>
				</font>
				<linkicon>
					<link>button_openwindow</link>
					<emptylink>button_emptytarget</emptylink>
				</linkicon>
				<footer>footer_narrow</footer>
				<selectioncolor>#FFD296</selectioncolor>
				<empty>Click to enter text</empty>				
			</baseformattedtextfield>
			<scrollercontrol>
				<anchored>
					<to>description</to>
					<position>insidebottomright</position>
				</anchored>
				<target>description</target>
				<button>
					<normal>button_scroller</normal>
					<pressed>button_scroller_down</pressed>
				</button>
			</scrollercontrol>
			
			<closebutton />
		</sheetdata>
	</windowclass>

</root>