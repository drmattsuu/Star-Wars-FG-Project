<?xml version="1.0" encoding="iso-8859-1"?>
<root>

	<windowclass name="skillmain">
		<placement>
			<size>
				<width>300</width>
				<height>334</height>
			</size>
		</placement>
		<nodelete />
		<sheetdata>
		
<!-- NAME -->
			<sheetframe name="main_name">
				<bounds>12,20,264,40</bounds>
			</sheetframe>
			
			<windowshortcut name="main_name_shortcut">
				<anchored>
					<to>main_name</to>
					<position>insidetopleft</position>					
					<offset>11,11</offset>
					<size>
						<height>20</height>
						<width>20</width>
					</size>
				</anchored>			
				<class>skill</class>
			</windowshortcut>
			<basestringfield name="main_name_name" source="name">
				<anchored>			
					<to>main_name</to>
					<position>insidetopleft</position>					
					<offset>32,14</offset>
					<size>
						<height>20</height>
						<width>200</width>
					</size>
				</anchored>
				<empty>&#171; New Skill &#187;</empty>
				<tabtarget>
					<next>main_value</next>
					<prev>main_encumbrance</prev>
				</tabtarget>				
			</basestringfield>
			<skilldicepool>
				<anchored>			
					<to>main_name</to>
					<position>insidetopright</position>					
					<offset>9,11</offset>
					<size>
						<height>20</height>
						<width>20</width>
					</size>
				</anchored>
			</skilldicepool>			
			
<!-- DETAILS -->			
			<sheetframe name="main_details">
				<bounds>12,60,264,86</bounds>
			</sheetframe>			
			<sheetframetitle name="main_main_title">
				<anchored>
					<to>main_details</to>
				</anchored>
				<static>Details</static>
			</sheetframetitle>			

			<!-- CHARACTERISTIC -->
			<sheetlabel>
				<anchored>
					<to>main_details</to>
					<offset>13,18</offset>
					<size>
						<width>209</width>
					</size>
				</anchored>
				<static>Characteristic</static>
			</sheetlabel>			
			<characteristicselector name="main_main_characteristic">
				<sourcename>characteristic</sourcename>
				<align>right</align>
				<anchored>
					<top>
						<parent>main_details</parent>
						<anchor>top</anchor>
						<offset>18</offset>
					</top>
					<right>
						<parent>main_details</parent>
						<anchor>right</anchor>
						<offset>-20</offset>
					</right>
					<size>
						<width>24</width>
						<height>20</height>
					</size>
				</anchored>
				<tabtarget>
					<next>main_main_quality</next>
					<prev>main_name_name</prev>
				</tabtarget>
			</characteristicselector>
			
			<!-- ADVANCES -->
			<!--<sheetlabel>
				<anchored>
					<to>main_details</to>
					<offset>13,38</offset>
					<size>
						<width>209</width>
					</size>
				</anchored>
				<static>Advances Taken</static>
			</sheetlabel>				
			<skillnumberfield name="main_advances">
				<sourcename>advances</sourcename>
				<anchored>
					<top>
						<parent>main_details</parent>
						<anchor>top</anchor>
						<offset>38</offset>
					</top>
					<right>
						<parent>main_details</parent>
