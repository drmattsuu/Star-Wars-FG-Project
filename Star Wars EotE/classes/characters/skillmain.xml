					</size>
				</anchored>
			</skillnumberfield> -->

			<!-- Advanced now labelled Knowledge-->
			<sheetlabel>
				<anchored>
					<to>main_details</to>
					<offset>13,38</offset>
					<size>
						<width>209</width>
					</size>
				</anchored>
				<static>Knowledge Skill</static>
			</sheetlabel>
			<checkbox name="knowledge_skill">
				<sourcename>knowledge</sourcename>
				<anchored>
					<top>
						<parent>main_details</parent>
						<anchor>top</anchor>
						<offset>38</offset>
					</top>
					<right>
						<parent>main_details</parent>
						<anchor>right</anchor>
						<offset>-11</offset>
					</right>
					<size>
						<width>36</width>
						<height>20</height>
					</size>
				</anchored>
			</checkbox>	

			
			<!-- Advanced now labelled Combat-->
			<sheetlabel>
				<anchored>
					<to>main_details</to>
					<offset>13,58</offset>
					<size>
						<width>209</width>
					</size>
				</anchored>
				<static>Combat Skill</static>
			</sheetlabel>
			<checkbox name="main_advances">
				<sourcename>advanced</sourcename>
				<anchored>
					<top>
						<parent>main_details</parent>
						<anchor>top</anchor>
						<offset>58</offset>
					</top>
					<right>
						<parent>main_details</parent>
						<anchor>right</anchor>
						<offset>-11</offset>
					</right>
					<size>
						<width>36</width>
						<height>20</height>
					</size>
				</anchored>
			</checkbox>			
			
<!-- DESCRIPTION -->
			<sheetframe name="main_description">
				<bounds>12,146,264,174</bounds>
			</sheetframe>
			<sheetframetitle name="main_description_title">
				<anchored>
					<to>main_description</to>
				</anchored>
				<static>Description</static>
			</sheetframetitle>
			
			<sheetformattedtextfield name="main_description_description" source="description">
				<anchored>
					<left>
						<parent>main_description</parent>
						<anchor>left</anchor>
						<offset>13</offset>					
					</left>
					<right>
						<parent>main_description</parent>
						<anchor>right</anchor>
						<offset>-13</offset>					
					</right>
					<top>
						<parent>main_description</parent>
						<anchor>top</anchor>
						<offset>18</offset>
					</top>
					<bottom>
						<parent>main_description</parent>
						<anchor>bottom</anchor>
						<offset>-13</offset>
					</bottom>
				</anchored>
			</sheetformattedtextfield>
			<scrollbar>
				<anchored>
					<to>main_description_description</to>
					<offset>-3,-2</offset>
				</anchored>
				<target>main_description_description</target>
			</scrollbar>			
			
			<closebutton />
		</sheetdata>
	</windowclass>
	
</root>