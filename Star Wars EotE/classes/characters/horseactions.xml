					<name>sheetgroup</name>
				</frame>		
			</sheetframe>

			<!-- Actions -->
			<basewindowlist name="actions_actions_actions">
				<class>empty</class>
				<skipempty />
				<anchored>
					<left>
						<parent>actions_actions</parent>
						<anchor>left</anchor>
						<offset>7</offset>					
					</left>
					<right>
						<parent>actions_actions</parent>
						<anchor>right</anchor>
						<offset>-7</offset>					
					</right>
					<top>
						<parent>actions_actions</parent>
						<anchor>top</anchor>
						<offset>7</offset>
					</top>
					<bottom>
						<parent>actions_actions</parent>
						<anchor>bottom</anchor>
						<offset>-7</offset>
					</bottom>
				</anchored>
				<script>
					function onInit()
						createWindowWithClass("horse_actions_blessings", window.getDatabaseNode());
						createWindowWithClass("horse_actions_melee", window.getDatabaseNode());
						createWindowWithClass("horse_actions_ranged", window.getDatabaseNode());					
						createWindowWithClass("horse_actions_social", window.getDatabaseNode());
						createWindowWithClass("horse_actions_spells", window.getDatabaseNode());					
						createWindowWithClass("horse_actions_support", window.getDatabaseNode());
					end
				</script>
			</basewindowlist>
			<scrollbar>
				<anchored>
					<to>actions_actions_actions</to>
					<offset>-9,-8</offset>
				</anchored>
				<target>actions_actions_actions</target>
			</scrollbar>
			
