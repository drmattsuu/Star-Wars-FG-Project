<?xml version="1.0" encoding="iso-8859-1"?>
<root>

	<windowclass name="condition_main">
		<placement>
			<size>
				<width>300</width>
				<height>334</height>
			</size>
		</placement>
		<nodelete />
		<sheetdata>
		
<!-- NAME -->
			<sheetframe name="main_name">
				<bounds>12,20,264,40</bounds>
			</sheetframe>
			
			<windowshortcut name="main_name_shortcut">
				<anchored>
					<to>main_name</to>
					<position>insidetopleft</position>					
					<offset>11,11</offset>
					<size>
						<height>20</height>
						<width>20</width>
					</size>
				</anchored>			
				<class>condition</class>
			</windowshortcut>
			<basestringfield name="main_name_name" source="name">
				<anchored>			
					<to>main_name</to>
					<position>insidetopleft</position>					
					<offset>32,14</offset>
					<size>
						<height>20</height>
						<width>200</width>
					</size>
				</anchored>
				<empty>&#171; New Condition &#187;</empty>
				<tabtarget>
					<next>main_details_duration</next>
					<prev>main_details_duration</prev>
				</tabtarget>				
			</basestringfield>
			
<!-- DETAILS -->			
			<sheetframe name="main_details">
				<bounds>12,60,264,50</bounds>
			</sheetframe>			
			<sheetframetitle name="main_main_title">
				<anchored>
					<to>main_details</to>
				</anchored>
				<static>Details</static>
			</sheetframetitle>
			
			<!-- DURATION -->
			<sheetlabel>
				<anchored>
					<to>main_details</to>
					<offset>13,22</offset>
					<size>
						<width>209</width>
					</size>
				</anchored>
				<static>Duration</static>
			</sheetlabel>
			<sheetstringfield name="main_details_duration" source="duration">
				<anchored>
					<top>
						<parent>main_details</parent>
						<anchor>top</anchor>
						<offset>22</offset>
					</top>
					<right>
						<parent>main_details</parent>
						<anchor>right</anchor>
						<offset>-13</offset>
					</right>
				</anchored>
				<empty>&#171; Duration &#187;</empty>
				<tabtarget>
					<next>main_name_name</next>
					<prev>main_name_name</prev>
				</tabtarget>
			</sheetstringfield>			
			
<!-- DESCRIPTION -->
			<sheetframe name="main_description">
				<bounds>12,110,264,170</bounds>
			</sheetframe>
			<sheetframetitle name="main_description_title">
				<anchored>
					<to>main_description</to>
				</anchored>
				<static>Description</static>
			</sheetframetitle>
			
			<sheetformattedtextfield name="main_description_description" source="description">
				<anchored>
					<left>
						<parent>main_description</parent>
						<anchor>left</anchor>
						<offset>13</offset>					
					</left>
					<right>
						<parent>main_description</parent>
						<anchor>right</anchor>
						<offset>-13</offset>					
					</right>
					<top>
						<parent>main_description</parent>
						<anchor>top</anchor>
						<offset>18</offset>
					</top>
					<bottom>
						<parent>main_description</parent>
						<anchor>bottom</anchor>
						<offset>-13</offset>
					</bottom>
				</anchored>
			</sheetformattedtextfield>
			<scrollbar>
				<anchored>
					<to>main_description_description</to>
					<offset>-3,-2</offset>
				</anchored>
				<target>main_description_description</target>
			</scrollbar>			
			
<!-- CURRENT RECHARGE -->
			<sheetframe name="main_currentrecharge">
				<bounds>12,280,264,40</bounds>
			</sheetframe>
			
			<sheetlabel>
				<anchored>
					<to>main_currentrecharge</to>
					<offset>13,14</offset>
					<size>
						<width>209</width>
					</size>
				</anchored>
				<static>Current Recharge</static>
			</sheetlabel>
			<rechargenumberfield name="main_currentrecharge_currentrecharge" source="currentrecharge">
				<rechargevalue>3</rechargevalue>
				<anchored>
					<to>main_currentrecharge</to>
					<offset>226,13</offset>
					<size>
						<width>25</width>
					</size>
				</anchored>
				<tabtarget>
					<next>main_name_name</next>
					<prev>main_name_name</prev>
				</tabtarget>				
			</rechargenumberfield>			
			
			<closebutton />
		</sheetdata>
	</windowclass>
	
</root>