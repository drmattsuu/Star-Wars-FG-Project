<?xml version="1.0" encoding="iso-8859-1"?>
<root>

	<windowclass name="conditionsmall">
		<sizelimits>
			<maximum>
				<height>20</height>
			</maximum>
		</sizelimits>
		<sheetdata>
			<windowbutton name="open">
				<bounds>0,1,20,20</bounds>
				<class>condition</class>
			</windowbutton>
			<basestringfield name="name">
				<bounds>21,4,-1,17</bounds>
				<empty>&#171; New Condition &#187;</empty>
				<disabled />
			</basestringfield>
			<rechargenumberfield name="duration">
				<rechargevalue>3</rechargevalue>			
				<anchored>
					<left>
						<anchor>right</anchor>
						<offset>-29</offset>
					</left>
					<top>
						<anchor>top</anchor>
						<offset>3</offset>
					</top>
				</anchored>
			</rechargenumberfield>			
		</sheetdata>
	</windowclass>

	<windowclass name="condition">
		<frame>charsheet</frame>
		<placement>
			<size>
				<width>300</width>
				<height>334</height>
			</size>
		</placement>
		<minimize>minimized_reference</minimize>
		<playercontrol />
		<sharable />
		<tooltip>
			<field>name</field>
		</tooltip>
		<sheetdata>
<!-- NAME -->
			<sheetframe name="main_name">
				<bounds>14,15,275,49</bounds>
			</sheetframe>
			
			<sheetframetitle name="main_name_title">
				<anchored>
					<to>main_name</to>
				</anchored>
				<static>Condition</static>
			</sheetframetitle>
			
			<windowshortcut name="main_name_shortcut">
				<anchored>
					<to>main_name</to>
					<position>insidetopleft</position>					
					<offset>17,18</offset>
					<size>
						<height>20</height>
						<width>20</width>
					</size>
				</anchored>			
				<class>condition</class>
			</windowshortcut>
			<basestringfield name="main_name_name" source="name">
				<anchored>			
					<to>main_name</to>
					<position>insidetopleft</position>					
					<offset>38,19</offset>
					<size>
						<height>20</height>
						<width>200</width>
					</size>
				</anchored>
				<empty>&#171; New Condition &#187;</empty>
				<tabtarget>
					<next>main_details_duration</next>
					<prev>main_details_duration</prev>
				</tabtarget>				
			</basestringfield>
			
<!-- DETAILS -->			
			<sheetframe name="main_details">
				<bounds>14,61,275,52</bounds>
			</sheetframe>			
			<sheetframetitle name="main_main_title">
				<anchored>
					<to>main_details</to>
				</anchored>
				<static>Details</static>
			</sheetframetitle>
			
			<!-- DURATION -->
			<sheetlabel>
				<anchored>
					<to>main_details</to>
					<offset>17,19</offset>
					<size>
						<width>209</width>
					</size>
				</anchored>
				<static>Duration</static>
			</sheetlabel>
			<sheetnumberfield name="main_details_duration" source="duration">
				<anchored>
					<to>main_details</to>
					<offset>226,19</offset>
					<size>
						<width>25</width>
					</size>
				</anchored>			
<!--				<anchored>
					<top>
						<parent>main_details</parent>
						<anchor>top</anchor>
						<offset>22</offset>
					</top>
					<right>
						<parent>main_details</parent>
						<anchor>right</anchor>
						<offset>-13</offset>
					</right>
					<size>
						<width>20</width>
					</size>					
				</anchored>-->
				<tabtarget>
					<next>main_name_name</next>
					<prev>main_name_name</prev>
				</tabtarget>
			</sheetnumberfield>			
			
<!-- DESCRIPTION -->
			<sheetframe name="main_description">
				<bounds>14,110,275,211</bounds>
			</sheetframe>
			<sheetframetitle name="main_description_title">
				<anchored>
					<to>main_description</to>
				</anchored>
				<static>Description</static>
			</sheetframetitle>
			
			<sheetformattedtextfield name="main_description_description" source="description">
				<anchored>
					<left>
						<parent>main_description</parent>
						<anchor>left</anchor>
						<offset>13</offset>					
					</left>
					<right>
						<parent>main_description</parent>
						<anchor>right</anchor>
						<offset>-13</offset>					
					</right>
					<top>
						<parent>main_description</parent>
						<anchor>top</anchor>
						<offset>20</offset>
					</top>
					<bottom>
						<parent>main_description</parent>
						<anchor>bottom</anchor>
						<offset>-20</offset>
					</bottom>
				</anchored>
			</sheetformattedtextfield>
			<scrollbar>
				<anchored>
					<to>main_description_description</to>
					<offset>-3,-2</offset>
				</anchored>
				<target>main_description_description</target>
			</scrollbar>			
			
<!--<!{1}** CURRENT RECHARGE **{1}>
			<sheetframe name="main_currentrecharge">
				<bounds>12,280,274,40</bounds>
			</sheetframe>
			
			<sheetlabel>
				<anchored>
					<to>main_currentrecharge</to>
					<offset>13,14</offset>
