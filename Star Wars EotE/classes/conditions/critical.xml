<?xml version="1.0" encoding="iso-8859-1"?>
<root>

	<windowclass name="criticalsmall">
		<sizelimits>
			<maximum>
				<height>20</height>
			</maximum>
		</sizelimits>
		<sheetdata>
			<windowbutton name="open">
				<bounds>0,1,20,20</bounds>
				<class>critical</class>
			</windowbutton>
			<basestringfield name="name">
				<bounds>21,4,-1,17</bounds>
				<empty>&#171; New Critical &#187;</empty>
				<disabled />
			</basestringfield>		
		</sheetdata>
	</windowclass>

	<windowclass name="critical">
		<frame>charsheet</frame>
		<placement>
			<size>
				<width>300</width>
				<height>334</height>
			</size>
		</placement>
		<sizelimits>
			<dynamic />
			<minimum>
				<width>20</width>
				<height>20</height>
			</minimum>
		</sizelimits>	
		<minimize>minimized_reference</minimize>
		<playercontrol />
		<sharable />
		<tooltip>
			<field>name</field>
		</tooltip>
		<sheetdata>
			<subwindow name="main">
				<bounds>0,0,-1,-1</bounds>
				<class>critical_main</class>
				<script file="classes/conditions/base.lua" />				
			</subwindow>
			<subwindow name="severe">
				<bounds>0,0,-1,-1</bounds>
				<class>critical_severe</class>
				<script file="classes/conditions/base.lua" />				
			</subwindow>			
			<tabcontrol name="tabs">
				<bounds>-22,28,18,157</bounds>
				<tab>
					<icon>tab_main</icon>
					<subwindow>main</subwindow>
				</tab>
				<tab>
					<icon>tab_severe</icon>
					<subwindow>severe</subwindow>
				</tab>				
				<activate>1</activate>
			</tabcontrol>		
			<closebutton />
		</sheetdata>
	</windowclass>
	
</root>